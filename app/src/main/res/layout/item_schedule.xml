<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/marginDefault">

            <TextView
                android:id="@+id/tvItemScheduleHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:text="00:00"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/itemScheduleTitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemScheduleAMPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|top"
                android:text="PM"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/itemScheduleSubtitle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/marginDefault">
            <TextView
                android:id="@+id/tvItemScheduleConferenceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:text="Nombre de la conferencia"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/itemScheduleSubtitle"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/tvItemScheduleSpeakerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:text="Anomalous Developer"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/itemScheduleSpeakerName"
                android:ellipsize="end"
                android:lines="1"
                />
            <TextView
                android:id="@+id/tvItemScheduleTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:text="Android"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_topic"
                android:textSize="@dimen/itemScheduleSpeakerName"
                android:ellipsize="end"
                android:lines="1"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>